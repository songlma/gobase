#!/bin/bash
TagVersion=$1
DockerHubUrl=$2
if [ ! -n "$TagVersion" ]; then
echo $0 v0.0.1
exit 1
fi

if [ ! -n "$DockerHubUrl" ]; then
DockerHubUrl=""
fi

ImageUrl="${DockerHubUrl}:${TagVersion}"

BaseDir=$(dirname `pwd`)

docker run --rm -v "${BaseDir}/config/config:/webroot/config" -v "${BaseDir}/config/secret:/webroot/secret" -p 8080:8080 $ImageUrl